[bar/mainbar-bspwm]
monitor = ${env:MONITOR}
;monitor-fallback = HDMI1
width = 100%
height = 25
radius = 0.0
fixed-center = true
bottom = false
separator = |
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #f00
wm-restack = bspwm
override-redirect = true
enable-ipc = true
border-size = 0
border-color = #00000000
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

;https://github.com/jaagr/polybar/wiki/Fonts
font-0 = "Noto Sans:size=10;3"
font-1 = "FontAwesome:size=10;3"
font-2 = "Noto Sans:size=10;3"
font-3 = "Noto Sans Mono:size=10;3"
modules-left = bspwm2
modules-center = wireless-network pavolume temperature memory cpu date battery
modules-right = uptime
tray-detached = false
tray-offset-x = 0
tray-offset-y = 0
tray-padding = 2
tray-maxsize = 20
tray-scale = 1.0
tray-position = right
tray-background = ${colors.background}
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev



