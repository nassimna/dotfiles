#Start mubmle over mic
super + alt + m 
	urxvt -e ~/mic_over_mumble
#Random wallpaper
super + w
    feh --bg-fill --randomize $HOME/stuff/pictures/wallpapers*

#VScode
super + v
	code

#Browser
super + b
    brave
#Conky-toggle
super + c
    conky-toggle

#Htop
super + h
    urxvt -e htop

#Rofi theme selector
super + r
    rofi -show drun

#dmenu
super + d
	dmenu_run -i -nb '#191919' -nf '#fea63c' -sb '#fea63c' -sf '#191919' -fn 'NotoMonoRegular:bold:pixelsize=14'

#terminal
super + Return
    urxvt -e fish

#brightness controle using brightnessctl
XF86MonBrightness{Up,Down}
	brightnessctl set 100{+,-}

#alacritty
super + KP_Enter
	urxvt -e fish

#Catfish
ctrl + alt + c
     catfish

#Pulse Audio Controler
ctrl + alt + u
     pavucontrol

#Scrot for SCREENSHOTS
Print
    scrot -s --line mode=edge ~/ScreenShots/%Y-%m-%d-%H:%M:%S:%s_screenshot.png

#Raises volume
XF86AudioRaiseVolume
    pactl -- set-sink-volume 0 +10%

#Lowers volume
XF86AudioLowerVolume
    pactl -- set-sink-volume 0 -10%

#Mute
XF86AudioMute
    pactl set-sink-mute 0 toggle
#########################
#        POLYBAR        #
#########################

#Hide polybar
super + y
    polybar-msg cmd toggle

#########################
#        BSPWM          #
#########################
# Move focus to other monitor
super + BackSpace
		bspc monitor -f next

#Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc & pkill -USR1 -x sxhkd

#Logout
super + x
	bspc quit

#kill
super + a
	bspc node -c

# # Toggle fullscreen of window
alt + Return
	bspc node --state \~fullscreen

# #  Toggle tiling of window
super + p
	bspc node --state \~tiled 
 
  # #  Toggle tiled  windows
super + g
	bsp-layout next --layouts grid

 # #  Toggle tiled  windows
super + t
	bsp-layout next --layouts tall

 # #  Toggle floating  windows
super + f
	bspc node --state \~floating

# #Cycle btw desktops
super + Tab
	bspc desktop -f '^{1-9,10}'

# # cycle btw window layout 
super + space
	bsp-layout next

# #  set the window state 
super + m
	bsp-layout next --layouts monocle,grid

# # Focus selected desktop	FOR FRNECH AZERTY KEYBOARDS
super + {1-9,0}
    bspc desktop -f '^{1-9,10}'

# # Move window to selected desktop FOR AZERTY KEYBOARDS
super + shift + {1-9,0}
    id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}

# # Move a floating window
super + {Left,Right,Up,Down}
   xdo move {-x -20, -x +20, -y -20, -y +20}

# # Expand a window by moving one of its side outward
super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# # Contract a window by moving one of its side inward
ctrl + alt + {Right,Up,Down,Left}
 	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# # Focus/swap windows by direction
ctrl + super +{Left,Down,Up,Right}
	bspc node --{focus} {west,south,north,east}

# # Switch btw window 
alt + Tab
	bspc node -f next.local 

# # Swap window by direction on tited mode 
super + shift + {Left,Down,Up,Right}
 	bspc node -s {west,south,north,east}

# Lock the screen
super + shift + l
	betterlockscreen -l
	